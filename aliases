# Functions

notes(){
        cd ~/Dropbox/Notes && ls -1;
}

cdls(){
	cd "$1" && ls -a;
}

note(){
        cd ~/Dropbox/Notes && vim "$1.md"
}
mp3extract(){
        ffmpeg -i "$1" -acodec libmp3lame "$2".mp3
}

gupdate(){
				git add "$1"
				git commit -m "$2"
				git push -f origin master;
}

aupdate() {
				cp ~/.aliases ~/dotfiles/aliases;
}
